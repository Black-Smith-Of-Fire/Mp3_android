<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/artistImage1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/songName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/artistImage1"
        android:textSize="20dp"
        android:text="Letsgooo"/>
   <TextView
       android:id="@+id/artist2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@+id/artistImage1"
       android:layout_below="@+id/songName1"
       android:text="d'Blacksmith"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:values="@array/rangeSliderValues"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:layout_below="@id/artist2"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/slider"
        android:src="@drawable/baseline_play_arrow_24"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>