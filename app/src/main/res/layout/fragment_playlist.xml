<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchPlaylist"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/round_edit_box"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Search for artists"
            android:layout_marginTop="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playlistRecyclerView"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_below="@+id/newPlaylist"/>

<!--        TODO: work on this button -->
        <Button
            android:id="@+id/newPlaylist"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="New button"
            android:layout_below="@+id/searchPlaylist"
            />

    </RelativeLayout>
</FrameLayout>
